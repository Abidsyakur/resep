<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Produk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* Custom CSS */
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        #preview-image {
            max-width: 200px;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Edit Produk</h2>
        <form action="/produk/update/<%= id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nama_produk" class="form-label">Nama Produk</label>
                <input type="text" class="form-control" name="nama_produk" value="<%= nama_produk %>" required>
            </div>
            <div class="form-group">
                <label for="harga_produk" class="form-label">Harga</label>
                <input type="text" class="form-control" name="harga_produk" value="<%= harga_produk %>" required>
            </div>
            <div class="mb-3">
                <label for="id_kategori" class="form-label">Kategori</label>
                <select name="id_kategori" class="form-control">
                    <% for(var i = 0; i < data.length; i++) { %>
                        <option value="<%= data[i].id_kategori %>"><%= data[i].nama_kategori %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="foto_produk" class="form-label">Foto Produk</label>
                <input type="file" class="form-control" name="foto_produk" id="foto_produk">
                <img id="preview-image" src="/images/upload/<%= foto_produk %>" alt="Foto Produk">
            </div>
            <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
    <script>
        document.getElementById('foto_produk').addEventListener('change', function () {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('preview-image').setAttribute('src', e.target.result);
            }
            reader.readAsDataURL(this.files[0]);
        });
    </script>
</body>

</html>
