<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Resep</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* Custom CSS */
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        #preview-image {
            max-width: 200px;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Edit Resep</h2>
        <form action="/resep/update/<%= id %>" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="judul_resep" class="form-label">Judul Resep</label>
                <input type="text" class="form-control" name="judul_resep" value="<%= judul_resep %>" required>
            </div>
            <div class="form-group">
                <label for="bahan" class="form-label">Bahan</label>
                <textarea class="form-control" name="bahan" rows="5" required><%= bahan %></textarea>
            </div>
            <div class="form-group">
                <label for="langkah_pembuatan" class="form-label">Langkah Pembuatan</label>
                <textarea class="form-control" name="langkah_pembuatan" rows="5" required><%= langkah_pembuatan %></textarea>
            </div>
            <div class="form-group">
                <label for="foto" class="form-label">Foto</label>
                <input type="file" class="form-control" name="foto" id="foto">
                <img id="preview-image" src="/images/upload/<%= foto %>" alt="Foto">
            </div>
            <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
    <script>
        document.getElementById('foto').addEventListener('change', function () {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('preview-image').setAttribute('src', e.target.result);
            }
            reader.readAsDataURL(this.files[0]);
        });
    </script>
</body>

</html>
